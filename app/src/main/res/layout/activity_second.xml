<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".SecondActivity">


    <Button
        android:id="@+id/createfile"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_baseline_create_new_folder_24"
        android:text="Create a New file" />

    <Button
        android:id="@+id/opennewfile"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:background="#FFFFFF"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_baseline_folder_open_24"
        android:text="Open a new file" />

    <Button
        android:id="@+id/sharefile"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:layout_gravity="center"
        android:drawableTop="@drawable/ic_baseline_share_24"
        android:layout_weight="1"
        android:text="Share File" />

    <Button
        android:id="@+id/About"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_marginTop="15dp"
        android:drawableTop="@drawable/ic_baseline_info_24"
        android:background="#FFFFFF"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="About" />
</LinearLayout>